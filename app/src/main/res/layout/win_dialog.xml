<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="40dp"
    android:layout_centerInParent="true"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">


        <LinearLayout
            android:id="@+id/l1_j"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/baumans"
                android:gravity="center"
                android:textColor="#5717AF"
                android:text="Room ID: "
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/roomid_j"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:fontFamily="@font/baumans"
                android:text="204789"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/l1_j"
            android:fontFamily="@font/baumans"
            android:text="You Won!! "
            android:textColor="#5717AF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/wind_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/win"
            android:layout_below="@id/text5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/wind_image"
            android:weightSum="2"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/restart_wd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Restart"
                android:layout_marginTop="8dp"
                android:textColor="#388E3C"
                android:textSize="19sp"
                android:fontFamily="@font/baumans"/>
            <TextView
                android:id="@+id/leave_wd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Leave room"
                android:layout_marginTop="8dp"
                android:textColor="#D11010"
                android:textSize="19sp"
                android:fontFamily="@font/baumans"/>
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>